<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.perpectiveteam.sonarrules</groupId>
  <artifactId>sonarqube-js-custom-rules</artifactId>
  <version>10.0.0</version>
  <name>sonarqube-js-custom-rules</name>
  <packaging>sonar-plugin</packaging>

  <dependencies>
    <dependency>
      <groupId>org.sonarsource.api.plugin</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>10.6.0.2114</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sonarsource.php</groupId>
      <artifactId>sonar-php-plugin</artifactId>
      <version>3.43.0.12862</version>
    </dependency>
    <dependency>
        <groupId>org.junit.jupiter</groupId>
        <artifactId>junit-jupiter</artifactId>
        <version>5.10.3</version>
        <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.sonarsource.sonar-packaging-maven-plugin</groupId>
        <artifactId>sonar-packaging-maven-plugin</artifactId>
        <version>1.23.0.740</version>
        <extensions>true</extensions>
        <configuration>
          <pluginKey>custom</pluginKey>
          <pluginName>PHP Custom Rules for Magento 2 CMS</pluginName>
          <requiredForLanguages>php</requiredForLanguages>
          <pluginClass>org.perpectiveteam.sonarrules.php.PHPCustomRulesPlugin</pluginClass>
          <skipDependenciesPackaging>true</skipDependenciesPackaging>
          <pluginDescription>Magento 2 Specific Rules</pluginDescription>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>